<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:background="#2D007C"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/item_layout_1"

        android:layout_below="@id/item_name"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_age"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_roll"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/item_layout_2"
        android:layout_below="@id/item_layout_1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_address"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/item_layout_3"
        android:layout_below="@id/item_layout_2"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_college"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_branch"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>





</RelativeLayout>