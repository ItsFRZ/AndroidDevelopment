<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FCF9EE"
    android:padding="10dp"

    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/studentAddItemName"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:hint="Student Name"
        android:textSize="20dp"
        android:layout_height="wrap_content"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/studentAddItemBranch"
            android:layout_weight="1"
            android:hint="Branch Name"
            android:textSize="18dp"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/studentAddItemYear"
            android:layout_weight="1"
            android:hint="Year of Study"
            android:textSize="18dp"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:id="@+id/studentAddButton"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="#F89A0F"
            android:text="Add"
            android:textColor="@color/white"></Button>

    </RelativeLayout>
</LinearLayout>