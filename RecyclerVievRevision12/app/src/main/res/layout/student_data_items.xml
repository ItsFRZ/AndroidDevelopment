<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="#444343"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutOne"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="left"
                android:hint="Faraz Sheikh"
                android:textColor="#EFB300"
                android:textColorHint="#EFB300"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/deleteButton"
                    android:background="@drawable/ic_baseline_delete_24"
                    android:layout_marginHorizontal="1dp"
                    android:layout_height="match_parent"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/updateButton"
                    android:background="@drawable/ic_baseline_create_24"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="match_parent"></Button>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="22"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#EFB300"
            android:textColorHint="#EFB300"></TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layoutTwo"
        android:layout_margin="10dp"
        android:layout_below="@+id/layoutOne"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="4 year"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColorHint="#EFB300"
            android:layout_weight="3"
            android:textColor="#EFB300"></TextView>


        <TextView
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColorHint="#EFB300"
            android:hint="Computer Science And Engineering"
            android:layout_weight="1"
            android:textColor="#EFB300"></TextView>


    </LinearLayout>



</RelativeLayout>